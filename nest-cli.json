{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/app-nodejs-codechallenge/src",
  "monorepo": true,
  "root": "apps/app-nodejs-codechallenge",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/app-nodejs-codechallenge/tsconfig.app.json"
  },
  "projects": {
    "anti-fraud": {
      "type": "application",
      "root": "apps/anti-fraud",
      "entryFile": "main",
      "sourceRoot": "apps/anti-fraud/src",
      "compilerOptions": {
        "tsConfigPath": "apps/anti-fraud/tsconfig.app.json"
      }
    },
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "transaction": {
      "type": "application",
      "root": "apps/transaction",
      "entryFile": "main",
      "sourceRoot": "apps/transaction/src",
      "compilerOptions": {
        "tsConfigPath": "apps/transaction/tsconfig.app.json"
      }
    }
  }
}